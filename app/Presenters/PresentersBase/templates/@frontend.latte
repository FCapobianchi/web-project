<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{ifset title}{include title|stripHtml} | {/ifset}Applicativo {$appname}</title>
        <link href="{$basePath}/css/styles.css" rel="stylesheet" />
        <link href="{$basePath}/css/custom.css" rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="{$basePath}/assets/img/favicon.png" />
        <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.27.0/feather.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>             
                    {include content}
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="footer mt-auto footer-dark">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 small">Copyright &copy; {$appname} {date('Y')}</div>
                            <div class="col-md-6 text-md-right small">
                                <a n:href="Homepage:privacypolicy">Privacy Policy</a>
                                &middot;
                                <a n:href="Homepage:termsandconditions">Termini &amp; Condizioni</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

        {block scripts}
        <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        {/block}   

        <!--script src="{$basePath}/js/scripts.js"></script-->
        <script src="{$basePath}/js/custom.js"></script>

    </body>
</html>
