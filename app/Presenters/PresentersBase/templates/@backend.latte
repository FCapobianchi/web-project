<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />

        <title>{ifset title}{include title|stripHtml} | {/ifset}Applicativo {$appname}</title>

        <link rel="icon" type="image/x-icon" href="{$basePath}/assets/img/favicon.png" />
        <link href="{$basePath}/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="{$basePath}/assets/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
        <link href="{$basePath}/assets/bootstrap-table/css/bootstrap-select.min.css" rel="stylesheet">
        <link href="{$basePath}/assets/fontawesome/css/all.min.css" rel="stylesheet" />
        <link href="{$basePath}/assets/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
        <link href="{$basePath}/assets/daterangepicker/daterangepicker.css" rel="stylesheet" />
        <link href="{$basePath}/assets/css/custom.css" rel="stylesheet" />        
        <script src="{$basePath}/assets/fontawesome/js/all.min.js" defer></script>
        
        {block pagecss}{/block}
    </head>

    <body class="text-center">
    
        <div class="d-flex w-100 h-100 p-3 mx-auto flex-column">

            <header class="mb-auto"> </header>

            <main role="main" class="">
                {include content}
            </main>

            <footer class="footer mt-auto">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 small">Copyright &copy; {$appname} {date('Y')}</div>
                        <div class="col-md-6 small">
                            <a n:href="Homepage:default">Privacy Policy</a>
                            &middot;
                            <a n:href="Homepage:default">Termini &amp; Condizioni</a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>

        <script src="{$basePath}/assets/jquery/jquery.min.js"></script>
        <script src="{$basePath}/assets/jquery-ui/jquery-ui.min.js"></script>
        <script src="{$basePath}/assets/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="{$basePath}/assets/popperjs/popper.js"></script>
        <script src="{$basePath}/assets/moment/moment.js"></script>
        <script src="{$basePath}/assets/daterangepicker/daterangepicker.js"></script>
        <script src="{$basePath}/assets/js-cookie/js.cookie.min.js"></script>
        <script src="{$basePath}/assets/bootstrap-table/bootstrap-table.min.js"></script>
        <script src="{$basePath}/assets/bootstrap-table/js/bootstrap-select.min.js"></script>
        <script src="{$basePath}/assets/nette/netteForms.min.js"></script>
        <script src="{$basePath}/assets/nette/nette.ajax.js"></script>
        <script src="{$basePath}/assets/js/nette.ajax.confirm.js"></script>
        <script src="{$basePath}/assets/js/custom.js"></script>

        {block scripts} {/block} 

    </body>

</html>
